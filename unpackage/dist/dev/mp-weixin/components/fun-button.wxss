.fun-btn {
  height: 64rpx;
  line-height: 58rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
  background: #DA53A2;
  color: #fff;
  padding: 0px 36rpx;
  display: inline-block;
  text-align: center;
}
.fun-btn .button-icon {
    width: 24rpx;
    height: 24rpx;
    margin: 20rpx 0rpx;
    margin-right: 20rpx;
    display: inline-block;
    vertical-align: middle;
}
.fun-btn text {
    vertical-align: middle;
    display: inline-block;
}
.fun-btn.block {
    display: block;
    width: 100%;
}
.fun-btn.light {
    background: #fff;
    color: #DA53A2;
}
.fun-btn.text {
    background: transparent;
    color: #c7c7c7;
    padding: 0px;
    font-size: 24rpx;
}

